                </button>
            </div>
            <div class="modal-body" style="margin-left: 2px;">
                <div class="">
                    @if (Session != null)
				    {
				    	if (Session["eTrac_UserLocations"] != null)
				    	{
				    		@Html.DropDownList("ddl_LocationForEmployee", new SelectList((List<WorkOrderEMS.Models.UserLocations>)Session["eTrac_UserLocations"], "LocationId", "LocationName"), "--Select location for employee--", new { @class = "form-control input-rounded", @id = "ddl_LocationForEmployee" })
