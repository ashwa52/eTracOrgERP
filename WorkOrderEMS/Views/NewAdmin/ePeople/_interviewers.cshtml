@foreach (var item in Model.Interviewers)
{
	if (item.INS_EMP_InterviewerEmployeeId == Model.currentEmployeeId)
	{
		<div class="card-header offlineCard" id="user1" style="background:@(item.INS_IsAvailable=="Y"?"#43D84A":"#fff")">
			<div class="profile_image inline spccing">
				<img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar">
			</div>
			<div class="profile_detail inline spccing">
				<span class="name">
					@item.InterviwerName
				</span>
				<span class="profile">
					General Manager
				</span>
			</div>
			@if (Model.InterviewStartDateTime >= DateTime.Now && Model.InterviewStartDateTime.Subtract(DateTime.Now).Minutes <= 10)
			{
				<div style="float:right">
					<label class="toggle">
						<i class="fa toggle-off active"></i>
						<input type="checkbox" class="toggle-input">
						<div class="toggle-controller default-success"></div>
						<i class="fa  toggle-on"></i>
					</label>
				</div>
			}
		</div>
	}
	else
	{
		<div class="card-header offlineCard" id="user2">
			<div class="profile_image inline spccing">
				<img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar">
			</div>
			<div class="profile_detail inline spccing">
				<span class="name">
					@item.InterviwerName
				</span>
				<span class="profile">
					General Manager
				</span>
			</div>
			@if (Model.InterviewStartDateTime >= DateTime.Now && Model.InterviewStartDateTime.Subtract(DateTime.Now).Minutes == 0 && (item.INS_IsAvailable == "N" || string.IsNullOrEmpty(item.INS_IsAvailable)))
			{
				<div style="float:right">
					<input type="text" class="form-control inline comment btn-rounded" style="float:left" />
					<button class="btn btn-default btnAbsent">Absent</button>
				</div>
			}
		</div>
	}
}
<div class="row interviewAction">
	<div class="col-md-12">
		<button class="btn btn-default btncancel">Cancel</button>
		@if (!Model.CanInterviewStart)
		{
			<button class="btn btn-default btnstart" onclick="GetInterviewQuestions();">Start</button>
		}
		else
		{
			<button class="btn btn-default btnstart" disabled="disabled" title="All Interviewers Are Not Available">Start</button>
		}

	</div>
</div>