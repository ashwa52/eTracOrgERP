@model WorkOrderEMS.Models.VendorCompanyContractDocument
@{
    ViewBag.Title = "VenderDocument";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="content-body" style="min-height: 920px;">
    <!-- row -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card aos-init" data-aos="fade-up">
                    <div class="card-body">
                        <div class="card-header" style="height: 45px;">
                            <h4 class="card-title addWhite"><b>Company documents</b></h4>
                        </div>
                        @if (Model != null)
                        {
                            <table id="" border="0" cellpadding="0" cellspacing="0" class="table table-bordered table-striped verticle-middle table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>Document Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (!string.IsNullOrEmpty(Model.CMP_CompanyDocument))
                                    {
                                        <tr>
                                            <td>Company Document</td>
                                            <td><a href="@Model.CMP_CompanyDocument" download><span style="padding: 0 5px 0 0;" title="Contract Document"><i class="fa fa-download" style="color:green;font-size: 22px;"></i></span></a></td>
                                        </tr>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.CNT_ContractDocument))
                                    {
                                        <tr>
                                            <td>Contract Document</td>
                                            <td><a href="@Model.CNT_ContractDocument" download><span style="padding: 0 5px 0 0;" title="Contract Document" ><i class="fa fa-download" style="color:green;font-size: 22px;"></i></span></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <table id="" border="0" cellpadding="0" cellspacing="0" class="table table-bordered table-striped verticle-middle table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>Document Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
