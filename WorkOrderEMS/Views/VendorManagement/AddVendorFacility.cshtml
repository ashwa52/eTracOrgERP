}
@section scripts{
    <script type="text/javascript">
    var $_locationId = '@locationId';
    var $_userTypeId = '@userType';
    var $_VendorID = '@ViewBag.VendorId';
    var $_VendorName = '@ViewBag.VendorName';
    var $_VendorStatus = "false";
    </script>
