@model WorkOrderEMS.Models.CommonApplicantModel

@{
    Layout = null;
}

<div class="row">
    <div class="colmn col-md-12 text-center">
        <div class="form-group">
            <label class="form-label">Please Provide your Contact Info</label>
        </div>

    </div>
</div>
@for (var i = 0; i < Model.ApplicantContactInfo.Count(); i++)
{
    <div class="row">
        <div class="colmn col-md-4">
            <div class="form-group">
                @Html.DropDownListFor(c => c.ApplicantContactInfo[i].ACI_IsActive, new SelectList(
new List<Object>{
                                                                    new { value = 0 , text = "--Type--"  },
                                                                    new { value = "Phone" , text = "Phone"  },
                                                                    new { value = "Mobile" , text = "Mobile" },
},
"value",
"text", 0), new { @id = "ContactType", @class = "form-control input-rounded" })
            </div>
        </div>
        <div class="colmn col-md-8 d-flex align-item-center">
            <div class="form-group">
                @Html.TextBoxFor(model => model.ApplicantContactInfo[i].ACI_PhoneNo, new { @id = "Phone", @class = "form-control", @placeholder = "Phone" })
                @Html.ValidationMessageFor(model => model.ApplicantContactInfo[i].ACI_PhoneNo)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="colmn col-md-12">
            <div class="form-group">
                @Html.TextBoxFor(model => model.ApplicantContactInfo[i].ACI_eMail, new { @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.ApplicantContactInfo[i].ACI_eMail)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="colmn col-md-12">
            <div class="form-group conact_method">
                <label class="form-label">Perderred Method of contact</label>
                <label class="form-label checkbox_label">
                    @Html.RadioButtonFor(model => model.ApplicantContactInfo[i].ACI_PrefredContactMethod, "Phone", new { @class = "form-label checkbox_label" }) Phone
                    @Html.RadioButtonFor(model => model.ApplicantContactInfo[i].ACI_PrefredContactMethod, "Email", new { @class = "form-label checkbox_label" }) Email
                </label>
            </div>
        </div>
    </div>
}
    <div class="row">
        <div class="colmn col-md-12 text-right">
            <div class="form-group">
                <button class="btn">Add more Contacts</button>
            </div>
        </div>
    </div>