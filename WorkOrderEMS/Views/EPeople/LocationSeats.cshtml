@model WorkOrderEMS.Models.tbl_LocationSeats
@{
    ViewBag.Title = "Location Seats";

    var isRefresh = ViewBag.IsPageRefresh;
    if (isRefresh == true)
    {
        Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    }
    else
    {
        Layout = null;

    }

    @*< img src = "~/Content/Images/ProfilePic/7_636530235980373604.png" />*@
    long locationId = 0;
    long userType = 0;
    WorkOrderEMS.Models.eTracLoginModel ObjLogin = (WorkOrderEMS.Models.eTracLoginModel)Session["eTrac"];

    if (ObjLogin != null)
    {
        locationId = ObjLogin.LocationID;
        userType = ObjLogin.UserRoleId;
    }
}


<link href="~/Content/NewAdminContent/VENDOR/jsgrid/css/jsgrid.min.css" rel="stylesheet" />
<link href="~/Content/NewAdminContent/VENDOR/jsgrid/css/jsgrid-theme.min.css" rel="stylesheet" />

<script src="https://www.amcharts.com/lib/4/core.js"></script>
<script src="https://www.amcharts.com/lib/4/charts.js"></script>
<script src="https://www.amcharts.com/lib/4/themes/material.js"></script>
<script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>
<script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
<script src="https://www.amcharts.com/lib/3/serial.js"></script>

<div class="content-body">
    <div class="container-fluid">
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="card" data-aos="fade-up">
                    <div style="height: 45px;background:#0aa0cd;">
                        <div class="form-group row" style="margin-top:6px;margin-left:10px;">
                            <div class="col-sm-6">
                                <h3 style="color: white;">Location Seats</h3>
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("LocationSeatSubmit", "EPeople", FormMethod.Post, new { enctype = "multipart/form-data", @id = "DOT_form" }))
                    {
                        <div class="card-body">
                            <div class="panel panel-primary setup-content">
                                <div class="basic-form">
                                    <div class="form-group row ShowNormalPO">
                                        <label class="col-sm-1 col-form-label" id="lblIssueDate">Seat Name<span class="req">*</span></label>
                                        <div class="col-sm-3">
                                            @Html.TextBoxFor(model => model.LocationSeatName, new { @class = "form-control input-rounded required" })
                                            @Html.HiddenFor(model => model.SeatId)
                                        </div>
                                        <label class="col-sm-1 col-form-label" id="lblDeliveryDate">Colour<span class="req">*</span></label>
                                        <div class="col-sm-2">
                                            <input type="color" id="ColourSet" />
                                            @Html.HiddenFor(model => model.Colour)
                                        </div>
                                        <label class="col-sm-1 col-form-label" id="lblDeliveryDate"> Active<span class="req">*</span></label>
                                        <div class="col-sm-2" style="margin-top:8px;">
                                            @Html.CheckBoxFor(model => model.IsActive)
                                            @Html.HiddenFor(model => model.IsActive)
                                        </div>
                                        <button type="button" class="btn btn-default bluebutton nxt-btn" id="btnsave" value="EditPO" style="background-color:forestgreen;border-radius:18px;margin-left: 20px;width:160px;color:white; ">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <br />
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card aos-init" data-aos="fade-up">
                                <div class="card-header" style="height: 45px;">
                                    <div class="card-header headerSize" style="height:45px;width:100%;padding:0px;">
                                        <div class="basic-form">
                                            <div class="form-group mb-0">
                                                <div class="row">
                                                    <div class="col-md-1">
                                                    </div>
                                                    <div class="col-md-5">
                                                        <input id="SearchText" class="inputSearch form-control input-rounded" placeholder="Serach By Location Seat" style="width: 260px;" type="text">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div id="tbl_AllLocationLeavList" class="jsGrid" style="position: relative; height: 400px; width: 100%;">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Content/NewAdminContent/VENDOR/jsgrid/js/jsgrid.min.js"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
<script>

    $(document).ready(function () {
        var HOBurl = '../ePeople/GetListLocationSeatJSGrid';

        (function ($) {
            'use strict'
            var data;
            var act;
            $("#tbl_AllLocationLeavList").jsGrid({
                width: "100%",
                height: "400px",
                filtering: true,
                inserting: true,
                editing: true,
                sorting: true,
                paging: true,
                autoload: true,
                pageSize: 10,
                pageButtonCount: 5,
                loadMessage: "Please, wait...",
                controller: {
                    loadData: function (filter) {
                        return $.ajax({
                            type: "GET",
                            url: HOBurl,
                            datatype: 'json',
                            contentType: "application/json"
                        });
                    }
                },
                onRefreshed: function (args) {
                    $(".jsgrid-insert-row").hide();
                    $(".jsgrid-filter-row").hide();
                    $(".jsgrid-grid-header").removeClass("jsgrid-header-scrollbar");

                },
                fields: [
                    { name: 'SeatId', width: 10, title: "Seat Id" },
                    { name: 'LocationSeatName', width: 60, title: "Location Seat Name" },
                    {
                        name: "Colour", title: "Colour", width: 50, itemTemplate: function (value, item) {
                            return $("<div>").append('<div class="foo blue" style="background-color: ' + item.Colour + ';border: 1px solid rgba(0, 0, 0, .2); width: 40px;height: 20px;"></div>');
                        }
                    },
                    { name: 'IsActive', width: 60, title: "Status", type: "checkbox" },
                    {
                        name: "act", title: "Action", width: 50, itemTemplate: function (value, item) {
                            var $iconPencilForEdit = $("<i>").attr({ class: "fa fa-edit" }).attr({ style: "color:black;font-size: 22px;" });
                            var $iconPencilForDelete = $("<i>").attr({ class: "fa fa-trash" }).attr({ style: "color:green;font-size: 22px;" });

                            var $customEditButton = $("<span style='padding: 0 20px 0 0;'>")
                                .attr({ title: "Edit" })
                                .attr({ id: "btn-edit-" + item.SeatId }).click(function (e) {
                                    EditItem(item.SeatId)
                                }).append($iconPencilForEdit);
                            var $customDeleteButton = $("<span style='padding: 0 20px 0 0;'>")
                                .attr({ title: "Delete" })
                                .attr({ id: "btn-delete-" + item.SeatId }).click(function (e) {
                                    DeleteItem(item.SeatId)
                                }).append($iconPencilForDelete);

                            return $("<div>").attr({ class: "btn-toolbar" }).append($customEditButton).append("<br />").append($customDeleteButton);
                        }
                    },

                ]
            });
        })(jQuery);

        $("#SearchText").keyup(function () {
            var act;
            $("#tbl_AllLocationLeavList").jsGrid({
                width: "100%",
                height: "400px",
                filtering: true,
                inserting: true,
                editing: true,
                sorting: true,
                paging: true,
                autoload: true,
                pageSize: 10,
                pageButtonCount: 5,
                loadMessage: "Please, wait...",
                controller: {
                    loadData: function (filter) {
                        return $.ajax({
                            type: "GET",
                            url: HOBurl + '?Search=' + $("#SearchText").val(),
                            datatype: 'json',
                            contentType: "application/json"

                        });
                    }
                },
                onRefreshed: function (args) {
                    $(".jsgrid-insert-row").hide();
                    $(".jsgrid-filter-row").hide();
                    $(".jsgrid-grid-header").removeClass("jsgrid-header-scrollbar");

                },
                fields: [
                    { name: 'SeatId', width: 10, title: "Seat Id" },
                    { name: 'LocationSeatName', width: 60, title: "Location Seat Name" },
                    {
                        name: "Colour", title: "Colour", width: 50, itemTemplate: function (value, item) {
                            return $("<div>").append('<div class="foo blue" style="background-color: ' + item.Colour + ';border: 1px solid rgba(0, 0, 0, .2); width: 40px;height: 20px;"></div>');
                        }
                    },
                    { name: 'IsActive', width: 60, title: "Status", type: "checkbox" },
                    {
                        name: "act", title: "Action", width: 50, itemTemplate: function (value, item) {
                            var $iconPencilForEdit = $("<i>").attr({ class: "fa fa-edit" }).attr({ style: "color:black;font-size: 22px;" });
                            var $iconPencilForDelete = $("<i>").attr({ class: "fa fa-trash" }).attr({ style: "color:green;font-size: 22px;" });

                            var $customEditButton = $("<span style='padding: 0 20px 0 0;'>")
                                .attr({ title: "Edit" })
                                .attr({ id: "btn-edit-" + item.SeatId }).click(function (e) {
                                    EditItem(item.SeatId)
                                }).append($iconPencilForEdit);
                            var $customDeleteButton = $("<span style='padding: 0 20px 0 0;'>")
                                .attr({ title: "Delete" })
                                .attr({ id: "btn-delete-" + item.SeatId }).click(function (e) {
                                    DeleteItem(item.SeatId)
                                }).append($iconPencilForDelete);

                            return $("<div>").attr({ class: "btn-toolbar" }).append($customEditButton).append("<br />").append($customDeleteButton);
                        }
                    },
                ]
            });
        });

        $("#btnsave").on("click", function (event) {
            $('#Colour').val($('#ColourSet').val());
            if (!$("#DOT_form").valid()) {
                return false;
            }
            else {
                $.ajax({
                    type: 'POST',
                    url: '/EPeople/LocationSeatSubmit',
                    data: $("#DOT_form").serialize(),
                    success: function (data) {
                        var addNewUrl = "/EPeople/LocationSeats";
                        $('#RenderPageId').load(addNewUrl);
                    }
                });
            }
        });

        $("#LocationSeatName").change(function () {
            $.ajax({
                url: '../ePeople/CheckDuplicateLocationSeat?LocationSeat=' + $("#LocationSeatName").val(),
                cache: false,
                data: {},
                type: 'POST',
                success: function (data) {
                    if (data > "0") {
                        $("#LocationSeatName").val("");
                        $("#LocationSeatName").focus();
                        $("#LocationSeatName").select();
                        alert('Please Enter Valid Seat Name !!! ');
                    }
                },
                error: function (req, status, error) {
                }
            });
        });

        function EditItem(SeatId) {
            // event.preventDefault();
            var EditUrl = "/EPeople/LocationSeatsEdit?SeatId=" + SeatId;
            $.ajax({
                url: EditUrl,
                cache: false,
                type: "GET",
                success: function (data) {

                    $("#SeatId").val(JSON.stringify(data[0]['SeatId']).replace(/\"/g, ""));
                    $("#LocationSeatName").val(JSON.stringify(data[0]['LocationSeatName']).replace(/\"/g, ""));
                    $("#Colour").val(JSON.stringify(data[0]['Colour']).replace(/\"/g, ""));
                    $('#ColourSet').val(JSON.stringify(data[0]['Colour']).replace(/\"/g, ""));

                    if (JSON.stringify(data[0]['IsActive']).replace(/\"/g, "") == "true") {
                        $('#IsActive').attr('checked', true);
                        $("#IsActive").val(true);
                    }
                    else {
                        $('#IsActive').attr('checked', false);
                        $("#IsActive").val(false);
                    }
                },
                error: function (reponse) {
                    alert("error : " + reponse);
                }
            });
            //$('#RenderPageId').load(addNewUrl);
        }

        function DeleteItem(SeatId) {
            var addNewUrl = "/EPeople/LocationSeatsDelete?SeatId=" + SeatId;
            if (!confirm("Are you sure you want to delete this Record?")) {
                return false;
            }
            $('#RenderPageId').load(addNewUrl);
        }

        $('#IsActive').change(function () {

            if ($("#IsActive").prop(":checked")) {
                $("#IsActive").val(false);
            }
            else {
                $("#IsActive").val(true);
            }
        });

    });</script>