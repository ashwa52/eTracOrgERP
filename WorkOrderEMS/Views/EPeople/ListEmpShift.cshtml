@model WorkOrderEMS.Models.UserModel
@{
    ViewBag.Title = "List Emp Shift";
    var isRefresh = ViewBag.IsPageRefresh;
    if (isRefresh == true)
    {
        Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    }
    else
    {
        Layout = null;

    }
    long locationId = 0;
    long userType = 0;
    WorkOrderEMS.Models.eTracLoginModel ObjLogin = (WorkOrderEMS.Models.eTracLoginModel)Session["eTrac"];

    if (ObjLogin != null)
    {
        locationId = ObjLogin.LocationID;
        userType = ObjLogin.UserRoleId;
    }
}
@section scripts{
    <script type="text/javascript">
    var $_locationId = '@locationId';
    var $_userTypeId = '@userType';
    </script>
}

<style>
    .jsgrid-grid-body {
        height: 100% !important;
    }
</style>

<div class="content-body" style="min-height: 920px;">
    <div class="container-fluid">
        <div class="row page-titles mx-0 mb-0 mb-md-3 mb-sm-3 aos-init aos-animate" data-aos="fade-up">
            <div class="col-sm-12 col-xxl-4 col-lg-4 col-md-12 col-12">
                <div class="welcome-text">
                    <h4>Employee Wise Shift List</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card aos-init" data-aos="fade-up">
                    <div class="card-header" style="height: 45px;">
                        <div class="card-header headerSize" style="height:45px;">
                            <div class="basic-form">
                                <div class="form-group">
                                    <input id="searchPreBilltext" name="SearchText" type="text" style="margin-top:18px;" class="form-control input-rounded" placeholder="Employee Name">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="tbl_PreBillList" class="jsgrid" style="position: relative; height: 400px; width: 100%;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/GridListing/JsGridScript/EmpShiftList.js"></script>
<script src="~/Scripts/Search/Searching.js"></script>
